<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
   android:orientation="vertical"
   android:layout_width="fill_parent"
   android:layout_height="fill_parent"
   android:background="@drawable/gradient_background"
   android:fadingEdge="none"
   >
   <RelativeLayout
   android:fadingEdge="none"
   	android:id="@+id/wlll" 
	android:layout_height="45dip" 
	android:layout_width="fill_parent"
	android:background="@layout/header_bar_gradient">
  
   	<TextView  
   		android:id="@+id/title_bar"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
	    android:text="@string/app_name"
        android:ellipsize="marquee"
		android:textStyle="bold"
		android:textColor="#ffffff"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:paddingLeft="12dip"
		android:paddingTop="9dip"
		android:shadowColor="#000000"
		android:shadowRadius="1"
		android:shadowDy="-1"
		android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
		
	    />
   	<ImageView
   		android:id="@+id/header_button_1"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content" 
		android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>
        
	</RelativeLayout>
	
	    <org.ale.lectureleaks.BetterScrollView   
			android:id="@+id/ScrollView01"  
			android:layout_height="wrap_content"   
			android:layout_width="fill_parent"
			android:scrollbars="vertical"
		    android:scrollbarStyle="outsideOverlay" 
		    android:cacheColorHint="#00000000"
		    android:background="#00000000"
		    android:fadingEdgeLength="7dip"
		    android:fadingEdge="vertical"  >
	   
				
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:paddingLeft="4dip"
	    android:paddingRight="4dip"
	    >    
    
	<TextView  
	    android:id="@+id/num_desc"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:text="\nWhat is this lecture's title?"
	    android:textColor="#fff"
	    android:padding="3dip"
	    android:shadowColor="#333"
		android:shadowRadius="1"
		android:shadowDy="-1"
    />
    
          <SeekBar
        android:id="@+id/StreamProgressBar"
        android:progressDrawable="@drawable/purple_seekbar"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:secondaryProgress="0"
        android:layout_gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_weight="1.0" 
        android:layout_marginTop="2dip"
        android:paddingLeft="10dip"></SeekBar>
    
    <ImageButton
    	android:id="@+id/play_pause"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="Play!"
    	android:background="@layout/header_bar_gradient"
		android:textColor="#ffffff"
		android:shadowColor="#000000"
		android:shadowDy="-1"
		android:shadowRadius="1"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:padding="12dip"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:layout_marginTop="8dip"
    ></ImageButton>
    <TextView  
	    android:id="@+id/at"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:text="0:00"
	    android:textColor="#000000"
	    android:padding="7dip"
        android:gravity="center"
    	
    />
        <TextView  
	    android:id="@+id/length"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:text="0:00"
	    android:textColor="#000000"
	    android:padding="7dip"
        android:gravity="center"
    	
    />
    
    <TextView  
	    android:id="@+id/loadingtext"
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content"
	    android:textAppearance="?android:attr/textAppearanceSmall"
	    android:text="Sending.."
	    android:textColor="#000000"
	    android:padding="7dip"
        android:gravity="center"
    	android:visibility="gone"
    	
    />
	</LinearLayout>
			
   </org.ale.lectureleaks.BetterScrollView>
	     
</LinearLayout>